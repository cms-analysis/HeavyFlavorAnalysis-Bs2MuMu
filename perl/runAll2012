#!/usr/bin/env perl
#
# Usage: cd chains/subdir; runAll -t tarfile [-h] [-m] [-n] [-r] [-a] [-d]
# ------
#            -d                           printout only, don't do anything
#            -h                           hadd the output rootfiles
#            -C                           run crashed jobs
#            -s {mc,data,signal,norm,cs}  run jobs of a specific sample
#            -r rootdir                   place where to put output
#
# 2012/06/11 added rare backgrounds (again)
# ----------------------------------------------------------------------
# Send all questions, wishes and complaints to the 
#
# Author    Urs Langenegger <urs.langenegger@psi.ch>
#
# Modified by	Jose Lazo-Flores <Jose.Lazo-Flores@cern.ch>
# ----------------------------------------------------------------------
use Getopt::Std;
getopts('Cdhj:r:s:t:v:');

my $job = "v13/2012";

if ($opt_j) {
    $job = $opt_j; 
}

my $rootdir = "bmm/$job"; 
if ($opt_r) {
    $rootdir = $opt_r; 
}

if ($opt_v) {
    $version = $opt_v; 
} else {
    $version = "v13";
}

%jobs = (
    "signal Bs2MuMu MC mix"  
    => "-y 2012 -m,bmm2Reader.mix-Bs2MuMu,cbmm-v12-cms-BsToMuMu_BsFilter_8TeV-START53_V7A-v1-*,$version-cms-BsToMuMu.root"
    , "signal Bd2MuMu MC mix"  
    => "-y 2012 -m,bmm2Reader.mix-Bd2MuMu,cbmm-v12-cms-BdToMuMu_BdFilter_8TeV-START53_V7A-v1-*,$version-cms-BdToMuMu.root"
    #
    , "norm Bu2JpsiK MC mix acc"  
    => "-y 2012 -m,bmm2Reader.mix-Bu2JpsiK,cbmm-v12-cms-BuToJPsiK_K2MuFilter_8TeV-START53_V7A-v1-*,$version-cms-accBuToJpsiK.root"
    , "norm Bu2JpsiK MC mix overl"  
    => "-y 2012 -m,bmm2Reader.mix-Bu2JpsiK,cbmm-v12-cms-BuToJPsiK_K2MuPtEtaEtaFilter_8TeV-START53_V7A-v2-*,$version-cms-BuToJpsiK.root"
    #, "norm Bu2JpsiK MC mix 52X"  
    #=> "-y 2012 -m,bmm2Reader.mix-Bu2JpsiK,cbmm-$version-cms-BuToJPsiK_K2MuPtEtaEtaFilter-8TeV-START52_V9-v2-*,$version-cms-BuToJpsiK-52X.root"
    #
    , "cs Bs2JpsiPhi MC mix acc"  
    => "-y 2012 -m,bmm2Reader.mix-Bs2JpsiPhi,cbmm-v12-cms-BsToJPsiPhi_2K2MuFilter_8TeV-START53_V7A-v1-*,$version-cms-accBsToJpsiPhi.root"
    , "cs Bs2JpsiPhi MC mix overl"  
    => "-y 2012 -m,bmm2Reader.mix-Bs2JpsiPhi,cbmm-v12-cms-BsToJPsiPhi_2K2MuPtEtaFilter_8TeV-START53_V7A-v1-*,$version-cms-BsToJpsiPhi.root"
    #
	, "data 2012"  
    => "-y 2012 -b 1,bmm2Reader.2012,cbmm-$version-Run2012*,$version-2012-data.root"
    , "Bs2PiPi rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bs2PiPi,cbmm-v12-cms-BsToPiPi_2PiPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-BsToPiPi.root"
    , "Bs2KMuNu rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bs2KMuNu,cbmm-v12-cms-BsToKMuNu_KMuNuEtaFilter_8TeV-START53_V7A-v1*,$version-cms-BsToKMuNu.root"
    , "Bs2KPi rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bs2KPi,cbmm-v12-cms-BsToKPi_KPiPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-BsToKPi.root"
    , "Bs2KK rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bs2KK,cbmm-v12-cms-BsToKK_2KPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-BsToKK.root"
    , "Bd2KPi rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bd2KPi,cbmm-v12-cms-BdToKPi_KPiPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-BdToKPi.root"
    , "Lb2PiP rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Lb2PiP,cbmm-v12-cms-LambdaBToPPi_PPiPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-LambdaBToPPi.root"
    , "Bd2KK rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bd2KK,cbmm-v12-cms-BdToKK_2KPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-BdToKK.root"
    , "Bd2PiPi rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bd2PiPi,cbmm-v12-cms-BdToPiPi_2PiPtEtaFilter_8TeV-START53_V7A-v2-*,$version-cms-BdToPiPi.root"
    , "Lb2PK rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Lb2KP,cbmm-v12-cms-LambdaBToPK_PKPtEtaFilter_8TeV-START53_V7A-v2*,$version-cms-LambdaBToPK.root"
    , "Lb2PMuNu rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Lb2PMuNu,cbmm-v12-cms-LambdaBToPMuNu_PMuNuPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-LambdaBToPMuNu.root"
    , "Bd2PiMuNu rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bd2PiMuNu,cbmm-v12-cms-BdToPiMuNu_PiMuNuPtEtaFilter_8TeV-START53_V7A-v1*,$version-cms-BdToPiMuNu.root"
	#
    , "Bu2MuMuK rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bu2MuMuK,cbmm-v12-cms-BuToMuMuK_MuMuKEtaPtFilter_8TeV-START53_V7A-v1*,$version-cms-BuToMuMuK.root"
    , "Bu2MuMuPi rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bu2PiMuMu,cbmm-v12-cms-BuToMuMuPi_MuMuPiEtaPtFilter_8TeV-START53_V7A-v1*,$version-cms-BuToMuMuPi.root"
    , "Bd2MuMuPi0 rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bd2MuMuPi0,cbmm-v12-cms-BdToMuMuPi0_MuMuPi0EtaPtFilter_8TeV-START53_V7A-v1*,$version-cms-BdToMuMuPi0.root"
    , "Bd2MuMuGamma rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bd2MuMuGamma,cbmm-v12-cms-BdToMuMuGamma_MuMuEtaPtGammaFilter_8TeV-START53_V7A-v1*,$version-cms-BdToMuMuGamma.root"
    , "Bs2MuMuGamma rare MC"  
    => "-y 2012 -m,bmm2Reader.2e33-Bs2MuMuGamma,cbmm-v12-cms-BsToMuMuGamma_MuMuEtaPtGammaFilter_8TeV-START53_V7A-v1*,$version-cms-BsToMuMuGamma.root"
    );

#my $user  = $ENV{'USER'};
my $user  = bstomumu;

my $tarfile = "../../../../../120416.tar.gz";
if ($opt_t) {
    $tarfile = $opt_t; 
} else {
    if ($opt_h) {
    } else {
	die "provide a tarfile!\n";
    }
}

my $crash = ""; 
if ($opt_C) {$crash = "-C";}

my $srmcmd  = "lcg-cp -b -D srmv2";
my $dcap    = "dcap://t3se01.psi.ch:22125/pnfs/psi.ch/cms/trivcat";
my $scratch = "/shome/lazo-flores/scratch"; # /scratch is likely too small
my $srm     = "srm://t3se01.psi.ch:8443/srm/managerv2\\?SFN=/pnfs/psi.ch/cms/trivcat/store";
my $storage = "$srm/user/$user/$rootdir";

#my $runCommand = "run $queue $crash -c ../../treeNoCompNoSE.csh -t $tarfile -m batch";
my $runCommand = "run $crash -c ../../treeNoComp.csh -t $tarfile -m batch";


# ----------------------------------------------------------------------
# -- run hadd instead of submitting
if ($opt_h) {
    # print "srmls $storage | grep root\n";
    @lines = `srmls $storage | grep root`;
    #@lines = `ls $storage/* | grep root`;

    foreach $j (keys %jobs) {
	if ($opt_s =~ /signal/ && !($j =~ /signal/)) {next; }
	if ($opt_s =~ /cs/     && !($j =~ /cs/)) {next; }
	if ($opt_s =~ /norm/   && !($j =~ /norm/)) {next; }
	if ($opt_s =~ /data/   && !($j =~ /data/)) {next; }
	if ($opt_s =~ /mc/     && !($j =~ /MC/)) {next; }
	if ($opt_s =~ /rare/   && !($j =~ /rare/)) {next; }
	#if ($opt_s =~ /acc/    && !($j =~ /acc/)) {next; }
	#if ($opt_s =~ /bmt/    && !($j =~ /bmt/)) {next; }
	# -- skip bmt jobs if not explicitely requested
	if (!($opt_s =~ /bmt/) && ($j =~ /bmt/)) {next; }

	($options, $cutfile, $dataset, $output) = split(/,/, $jobs{$j});
	
	$dataset =~ s/-\*//;
	$dataset =~ s/\*/.\*/g;
	print "dataset = $dataset\n";
	print "file = $output\n";
	@rootfiles = grep(/$dataset/, @lines); 
	@rootfiles = grep(/\.root/, @rootfiles); 
	@rootfiles = grep(s/\n//, @rootfiles); 
	if ($#rootfiles == 0) {
	    @rootfiles = grep(s/.*$user\/$rootdir\///, @rootfiles); 
	    if ($opt_d) {
		# print "cp $rootfiles[0] $scratch/$output \n";
		# print "$srmcmd $storage/$rootfiles[0] $storage/$output \n";		
		print "$srmcmd $storage/$rootfiles[0] $scratch/$output \n";
	    } else {
		# print "cp $rootfiles[0] $scratch/$output \n";
		# system("/bin/cp $rootfiles[0] $scratch/$output");
                # print "$srmcmd $storage/$rootfiles[0] $storage/$output \n";
                # system("$srmcmd $storage/$rootfiles[0] $storage/$output");
		print "$srmcmd $storage/$rootfiles[0] $scratch/$output \n";
		system("$srmcmd $storage/$rootfiles[0] $scratch/$output");
	    }	    
	} elsif ($#rootfiles > 0) {
	    @rootfiles = grep(s/.*\/trivcat/$dcap/, @rootfiles); 
		@files12b = `ls $scratch | grep v12-2012B`;#
		@rootfiles12b = grep($scratch, @files12b);#

	    if ($opt_d) {
		print "hadd $scratch/$output \n";
		foreach $f (@rootfiles) {print "  $f\n";}
		print "hadd $scratch/v12-2012B-data.root \n";#
		foreach $f (@rootfiles12b) {print " $f\n";}#
	    } else {
		print "hadd $scratch/$output @rootfiles\n";
		if (-e "$scratch/$output") {unlink("$scratch/$output"); }
		system("hadd $scratch/$output @rootfiles");
		system("srmrm $storage/$class/$output");
		system("$srmcmd $scratch/$output $storage/$class/$output");
	    }
	}
    }
    
    die "that's it \n";
}


# ----------------------------------------------------------------------
# -- submit the jobs
foreach $j (keys %jobs) {
    ($options, $cutfile, $dataset, $output) = split(/,/, $jobs{$j});
    if ($opt_s =~ /data/   && !($j =~ /data/)) {next; }
    if ($opt_s =~ /norm/   && !($j =~ /norm/)) {next; }
    if ($opt_s =~ /signal/ && !($j =~ /signal/)) {next; }
    if ($opt_s =~ /cs/     && !($j =~ /cs/)) {next; }
    if ($opt_s =~ /mc/     && !($j =~ /MC/)) {next; }
    if ($opt_s =~ /rare/   && !($j =~ /rare/)) {next; }
    #if ($opt_s =~ /acc/    && !($j =~ /acc/)) {next; }
    # -- skip bmt jobs if not explicitely requested
    if (!($opt_s =~ /bmt/) && ($j =~ /bmt/)) {next; }  

    if ($j =~ /data/) {
	$command = "$runCommand -q all.q -x 'bin/runBmm2 $options -C cuts/$cutfile' -r 'STORAGE1 $storage/$class' ./$dataset"; 
    } else {
	$command = "$runCommand -q all.q -x 'bin/runBmm2 $options -C cuts/$cutfile' -r 'STORAGE1 $storage/$class' ./$dataset"; 
    }

    if ($opt_d) {
	print "$j \n$command\n";
    } else {
	print "$command\n";
	system($command);
    }

}

