foreach $dir (keys %syncDirectories) {
    $sdir = "$prefix/$dir";
    if ($opt_x) {
	if ($syncDirectories{$dir} =~ /$opt_x/) {
	    print "sync $sdir\n";
	    if (!$opt_d) {
		system("$se2se -s T2_CH_CSCS -t T3_CH_PSI -d $sdir")
	    }
	}
    } else {
	print "sync $sdir\n";
	if (!$opt_d) {
	    system("$se2se -s T2_CH_CSCS -t T3_CH_PSI -d $sdir")
	}
    }
}
